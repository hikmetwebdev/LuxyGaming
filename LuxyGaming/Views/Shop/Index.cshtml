@model ShopVM
<div class="page-heading header-text">
    <div class="container">
        <div class="row">
            <div class="col-lg-12">
                <h3>Our Shop</h3>
                <span class="breadcrumb"><a href="/">Home</a> > Our Shop</span>
            </div>
        </div>
    </div>
</div>

<div class="section trending">
    <div class="container">
        <ul class="trending-filter">
            <li>
                <a href="@Url.Action("Index", "Shop", new { category = "All" })" data-filter="*">Show All</a>
            </li>
            @foreach (Category category in Model.Categories)
            {
                <li>
                    <a href="@Url.Action("Index", "Shop", new { category = category.Name })" data-filter=".cat-@category.Id">@category.Name</a>
                </li>
            }
        </ul>
        <div class="row trending-box">
            @if (Model.SelectedCategory != null)
            {
                foreach (Games game in Model.Games.Where(x => x.CategoryId == Model.SelectedCategory.Id))
                {
                    <div class="col-lg-3 col-md-6 align-self-center mb-30 trending-items col-md-6 cat-@game.CategoryId">
                        <div class="item">
                            <div class="thumb">
                                <a href="product-details.html"><img width="300PX" height="300px"  src="~/assets/images/@game.ImageUrl" alt=""></a>
                                <span class="price"><em>$@game.Price</em>$@game.Discount</span>
                            </div>
                            <div class="down-content">
                                <span class="category">@Model.Categories.FirstOrDefault(c => c.Id == game.CategoryId)?.Name</span>
                                <h4>@game.Name</h4>
                                <a href="product-details.html"><i class="fa fa-shopping-bag"></i></a>
                            </div>
                        </div>
                    </div>
                }
            }
            else
            {
                foreach (Games game in Model.Games)
                {
                    <div class="col-lg-3 col-md-6 align-self-center mb-30 trending-items col-md-6 cat-@game.CategoryId">
                        <div class="item">
                            <div class="thumb">
                                <a href="product-details.html"><img width="300PX" height="300px" src="~/assets/images/@game.ImageUrl" alt=""></a>
                                <span class="price"><em>$@game.Price</em>$@game.Discount</span>
                            </div>
                            <div class="down-content">
                                <span class="category">@Model.Categories.FirstOrDefault(c => c.Id == game.CategoryId)?.Name</span>
                                <h4>@game.Name</h4>
                                <a href="product-details.html"><i class="fa fa-shopping-bag"></i></a>
                            </div>
                        </div>
                    </div>
                }
            }
        </div>
        <div class="row">
            <div class="col-lg-12">
                <ul class="pagination">
                    <li><a href="#"> &lt; </a></li>
                    <li><a href="#">1</a></li>
                    <li><a class="is_active" href="#">2</a></li>
                    <li><a href="#">3</a></li>
                    <li><a href="#"> &gt; </a></li>
                </ul>
            </div>
        </div>
    </div>
</div>